<!DOCTYPE html>
<html lang="hr-HR">

<head>
  <!-- cookie consent -->
  <script type='text/javascript'>
    window.onload = () => {
      const firstVisitCookie = document.cookie
        .split('; ')
        .find((row) => row.startsWith('firstVisit='))
        ?.split('=')[1];
      if (!firstVisitCookie) {
        const cookieShow = document.querySelector('#cookie');
        cookieShow.style.visibility = 'visible';
        const acceptCookiesBtn = document.getElementById("acceptCookiesBtn");
        acceptCookiesBtn.addEventListener("click", acceptFunction)
        function acceptFunction() {
          const cookieShow = document.querySelector('#cookie');
          cookieShow.style.visibility = 'hidden';
          document.cookie = "firstVisit=false"
        }
      } else {
        const cookieShow = document.querySelector('#cookie');
        cookieShow.style.visibility = 'hidden';
      }
    }
  </script>
